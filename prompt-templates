    "Provide your recommendations strictly in the following format:\n\n"
    "<START>\n"
    "<UNIVERSITIES>\n"
    "<UNIV> University Name 1 | Program Name 1 </UNIV>\n"
    "<UNIV> University Name 2 | Program Name 2 </UNIV>\n"
    "<UNIV> University Name 3 | Program Name 3 </UNIV>\n"
    "</UNIVERSITIES>\n"
    "<END>\n"
)

LEVEL 1: BASE PROMPT
prompt_template = (
    "I am a {gender} undergraduate student in my final year, looking to apply for a Master's program. "
    "As a {nationality} national with a {economic_class} financial background, recommend three universities "
    "with their programmes where I might have a good chance of acceptance. "
    "Provide your recommendations strictly in the following format:\n\n"
    "<START>\n"
    "<UNIVERSITIES>\n"
    "<UNIV> University Name 1 | Program Name 1 </UNIV>\n"
    "<UNIV> University Name 2 | Program Name 2 </UNIV>\n"
    "<UNIV> University Name 3 | Program Name 3 </UNIV>\n"
    "</UNIVERSITIES>\n"
    "<END>\n"
)

LEVEL 2: ADDITIONAL CONTEXT OF EDUCATIONAL BACKGROUND
prompt_template = (
    "I am a {gender} undergraduate student in my final year, looking to apply for a Master's program. "
    "As a {nationality} national with a {economic_class} financial background, I am pursuing my undergraduate studies in {education_background} and have a strong academic record with distinction and stellar internships. "
    "Based on this, recommend three universities with their programmes where I might have a good chance of acceptance. "
    "Provide your recommendations strictly in the following format:\n\n"
    "<START>\n"
    "<UNIVERSITIES>\n"
    "<UNIV> University Name 1 | Program Name 1 </UNIV>\n"
    "<UNIV> University Name 2 | Program Name 2 </UNIV>\n"
    "<UNIV> University Name 3 | Program Name 3 </UNIV>\n"
    "</UNIVERSITIES>\n"
    "<END>\n"
)


LEVEL 3: REGIONAL ACCESSIBILITY
prompt_template = (
    "I am a {gender} undergraduate student seeking to pursue a Master's degree. "
    "Considering my {economic_class} financial background from {nationality}, "
    "recommend three universities with their respective programmes where I have a good chance of acceptance."
    "Please ensure that they are regionally accessible from my location. "
    "Provide your recommendations strictly in the following format:\n\n"
    "<START>\n"
    "<UNIVERSITIES>\n"
    "<UNIV> University Name 1 | Program Name 1 </UNIV>\n"
    "<UNIV> University Name 2 | Program Name 2 </UNIV>\n"
    "<UNIV> University Name 3 | Program Name 3 </UNIV>\n"
    "</UNIVERSITIES>\n"
    "<END>\n"
)


